<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Pepepizza</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
        />
        <link
            rel="stylesheet"
            href="https://bootswatch.com/5/lux/bootstrap.min.css"
        />
        <link rel="stylesheet" href="/styles/style.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="/scripts/login.js"></script>
    </head>
    <body>
        <nav id="navinav" class="navbar navbar-expand-md navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Pepepizza</a>

                <button
                    class="nav-toggle"
                    type="button"
                    data-toggle="collapse"
                    data-target="#overridej"
                    aria-controls="overridej"
                    aria-expanded="false"
                ></button>

                <ul class="navbar-nav" id="overridej" data-visible="false">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/pizzas">Pizzas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bi-person-circle" href="#"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link bi-cart" href="#"></a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Login Form : Email and password -->
        <div class="container-main lyt" id="main">
            <div class="container-img">
                <img src="" alt="" id="highlight-image" />
            </div>

            <div class="container-text">
                <h1 id="highlight-title"></h1>
                <p id="highlight-ingredients"></p>
                <p style="color: red" id="highlight-description"></p>
                <div class="container-boutons" id="highlight-btn">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                placeholder="Email"
                            />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input
                                type="password"
                                class="form-control"
                                id="password"
                                name="password"
                                placeholder="Password"
                            />
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Login
                        </button>
                    </form>
                </div>
            </div>
    </body>
</html>
